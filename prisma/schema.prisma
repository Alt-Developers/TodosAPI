generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model TodoItem {
  id        String    @id @unique(map: "id_UNIQUE")
  name      String
  desc      String?
  due       DateTime?
  createdAt DateTime  @default(now())
  listId    String
  TodoList  TodoList  @relation(fields: [listId], references: [id])
}

model TodoList {
  id       String     @id @unique(map: "id_UNIQUE")
  name     String
  desc     String
  ownerId  String
  User     User       @relation(fields: [ownerId], references: [id])
  TodoItem TodoItem[]
}

model User {
  id       String     @id @unique(map: "id_UNIQUE")
  fName    String
  lName    String
  email    String     @unique(map: "email_UNIQUE")
  password String
  TodoList TodoList[]
}
